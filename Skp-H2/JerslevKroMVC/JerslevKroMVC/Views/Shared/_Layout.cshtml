<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jerslev Kro</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/d1180d0d8f.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Header-->
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                <div class="col-md-4 block1">
                    <div class="PhoneNumber-container">
                        <div class="PhoneNumber"><i class="fas fa-mobile fa-2x" style="vertical-align: middle;"></i> 98 83 11 88 </div>
                    </div>
                </div>
                <div class="col-md-4 block2">
                    <div class="Text">Jerselv Kro</div>
                    <img src="~/Images/Jerslev Kro.jpg" alt="Jerslev Kro" class="Image" />
                </div>
                <div class="Flags">
                    <p style="text-align: right;">
                        <!--Figure out were you are and chance the language!-->
                        <a class="Flag-da" href=@Url.Action("SelectLanguage", ViewContext.RouteData.Values["controller"].ToString(), new { language = "da" })>
                            <img src='@Url.Content("https://www.countryflags.io/dk/flat/32.png")' />
                        </a>
                        <a class="Flag-en-gb" href=@Url.Action("SelectLanguage", ViewContext.RouteData.Values["controller"].ToString(), new { language = "en-gb" })>
                            <img src='@Url.Content("https://www.countryflags.io/gb/flat/32.png")' />
                        </a>
                    </p>
                </div>
                <div class="col-md-4 block3">
                    <div class="email-container">
                        <div class="email"><i class="far fa-envelope fa-2x" style="vertical-align: middle;"></i> Info@JerslevKro.dk</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Nav bar-->
    <div id="sentinel"></div>
    <div class="topnav" style=" position: sticky; top: 0;">
        <div id="mylinks">
            <ul class="nav">
                <!--Route/MainSolution/ResourcesFolder/ResourcesFile/Name-->
                <li> @Html.ActionLink(Resources.MyTexts.FORSIDE, "Index", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.OM_JERSLEV_KRO, "About", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.OM_OS, "Contact", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.IKKE_LAVET, "Contact", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.IKKE_LAVET, "Contact", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.IKKE_LAVET, "Contact", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.IKKE_LAVET, "Contact", "Home")</li>
                <li>@Html.ActionLink(Resources.MyTexts.IKKE_LAVET, "Contact", "Home")</li>
            </ul>
        </div>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>
    <div class="underline-nav"></div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!--Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
        <!--Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide img-responsive" src="~/Images/Jerslev Kro.Inside1.jpg" alt="slide" />
            </div>
            <div class="item">
                <img class="first-slide img-responsive" src="~/Images/Jerslev Kro.Inside1.jpg" alt="slide" />
            </div>
            <div class="item">
                <img class="first-slide img-responsive" src="~/Images/Jerslev Kro.Inside1.jpg" alt="slide" />
            </div>
            <div class="item">
                <img class="first-slide img-responsive" src="~/Images/Jerslev Kro.Inside1.jpg" alt="slide" />
            </div>
            <div class="item">
                <img class="first-slide img-responsive" src="~/Images/Jerslev Kro.Inside1.jpg" alt="slide" />
            </div>
        </div>
        <!--Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="underline-scrollbar"></div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="underline-fotter"></div>
    <!--Fotter start-->
    <footer class="footerInfo">
        <h2>Jerslev Kro</h2>
        <p>
            @Resources.MyTexts.Adresse: Voldgade 4, 9740 Brønderslev
            <br> 9740 Jerslev J.
            <br> Tlf.: 98 83 11 88
            <br> E-mail: <a href="mailto:Info@JerslevKro.dk?body=Angående%20din%20hjemmeside:&subject=Potentiel%20arbejde?"
                            target="_blank">Info@JerslevKro.dk</a>
            <br>&copy; @DateTime.Now.Year - Jerslev Kro
        </p>
    </footer>

    @Scripts.Render("~/bundles/JavaScript")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
