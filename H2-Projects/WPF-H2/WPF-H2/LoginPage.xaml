<UserControl x:Class="WPF_H2.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_H2"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        <StackPanel>
            <Label Content="Username" Foreground="black" ></Label>
            <TextBox Name="txt_UserName" ></TextBox>
            <Label Content="Password" Foreground="black" ></Label>
            <PasswordBox Name="txt_Password"></PasswordBox>
            <Button Content="Login" Click="Button_Click_Login"/>
            <TextBlock Name="txtStatus"/>
        </StackPanel>
</UserControl>
