<UserControl x:Class="WPF_H2_V02.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_H2_V02"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" Background="HotPink">
    <StackPanel>
        <Label Content="Username" Foreground="black" Margin="0,10,0,0"></Label>
        <TextBox Name="txt_UserName" ></TextBox>
        <Label Content="Password" Foreground="black" ></Label>
        <PasswordBox Name="txt_Password"></PasswordBox>
        <Button Content="Login" Click="Button_Click_Login" Margin="0,38,0,0"/>
        <Border BorderBrush="White" CornerRadius="10" Padding="2" Margin="0,5,0,0"
         HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="150" Background="White">
            <TextBlock Name="txtStatus" Background="white" Width="143" Height="23" HorizontalAlignment="Center" Text="" VerticalAlignment="Center" FontSize="15" TextAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>
